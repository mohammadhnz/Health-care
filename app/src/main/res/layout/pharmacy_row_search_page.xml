<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:layout_marginTop="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/search_drug_row_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#FFFF"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/search_phar_row_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/search_drug_img_recId"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="64dp"
                app:srcCompat="@drawable/pngitem_2558790" />


            <TextView
                android:id="@+id/search_pharmacy_nameId"
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-35dp"
                android:layout_marginTop="25dp"
                android:textColor="#4A5AC1"
                android:textSize="26sp"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>