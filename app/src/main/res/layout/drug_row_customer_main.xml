<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="172dp"
    android:layout_marginTop="2dp">
<!--    android:background="@drawable/recycler_item_back2"-->>

    <LinearLayout
        android:id="@+id/drugrecRowLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/drug_img_recId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="64dp"
            app:srcCompat="@drawable/pngitem_479890" />
        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="-62dp"
            android:layout_marginBottom="61dp"
            android:background="#3590FB" />

        <TextView
            android:id="@+id/drug_name_id_row"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-55dp"
            android:textAlignment="center"
            android:textColor="#3590FB"
            android:textSize="14sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/drug_price_id_row"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            android:textColor="#3590FB"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="SmallSp">

        </TextView>


    </LinearLayout>

</LinearLayout>