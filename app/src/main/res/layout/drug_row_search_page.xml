<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:layout_marginTop="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/search_drug_row_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#FFFF"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/search_drug_img_recId"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="64dp"
                app:srcCompat="@drawable/pngitem_479890" />

            <TextView
                android:id="@+id/search_drug_name_id_row"
                android:layout_width="197dp"
                android:layout_height="30dp"
                android:layout_marginStart="-35dp"
                android:layout_marginTop="26dp"
                android:textColor="#4A5AC1"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/search_drug_price_id_row"
                android:layout_width="170dp"
                android:layout_height="18dp"
                android:layout_marginStart="-196dp"
                android:layout_marginTop="65dp"
                android:textColor="#242F75"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="SmallSp">

            </TextView>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>