<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DrugPage"
    android:background="#FFFFFF"
    android:clipToOutline="true"
    android:orientation="vertical">


    <View
        android:layout_width="412dp"
        android:layout_height="300dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-15dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/customer_main_page_up" />


    <EditText
        android:id="@+id/drug_page_price"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="10dp"
        android:textAlignment="textStart"
        android:textColor="#204A7B"
        android:hint="price"
        android:textColorHint="#8C8C9C" />

    <ImageView
        android:id="@+id/drug_img_recId"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-600dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="64dp"
        app:srcCompat="@drawable/pngitem_479890" />


    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_drug_bar_id"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="542dp"
        android:background="@drawable/text_back_3"
        android:hint="@string/search_here"
        android:textColor="#204A7B"
        app:searchIcon="@drawable/search_icon" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_result_id"
        android:layout_width="match_parent"
        android:layout_height="355dp"
        android:layout_below="@id/search_drug_bar_id"
        android:layout_marginTop="-530dp"
        android:layout_marginBottom="22dp" />

    <EditText
        android:id="@+id/drug_des_d_id"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="-580dp"
        android:textAlignment="textStart"
        android:textColor="#204A7B"
        android:hint="description"
        android:textColorHint="#8C8C9C" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-90dp"
        android:fontFamily="@font/playfair_display"
        android:text="description:"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/drug_page_name_id"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:hint="drug name"
        android:textAlignment="textStart"
        android:textSize="40sp"
        android:textColor="#204A7B"
        android:textColorHint="#8C8C9C" />

</LinearLayout>