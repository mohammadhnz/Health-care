<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#71FF7F"
                android:startColor="#3590FB" />
            <corners android:radius="40dp" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FAFAFA" />
            <corners android:radius="40dp" />
            <padding android:bottom="10dp"
                android:left="10dp"
                android:right="15dp"
                android:top="10dp"/>
            <size
                android:width="50dp"
                android:height="50dp" />
        </shape>
    </item>
</layer-list>